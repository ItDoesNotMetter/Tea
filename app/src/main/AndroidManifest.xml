<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fengjie.model">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.main.MainActivity"
                  android:launchMode="singleTop"
                  android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.addWorker.AddWorkerActivity"
                  android:label="@string/addWorkerActivity"
                  android:launchMode="singleTop"
                  android:windowSoftInputMode="adjustPan">
        </activity>

        <activity android:name=".activity.addTea.AddTeaActivity"
                  android:label="@string/addTeaActivity"
                  android:launchMode="singleTop"
                  android:windowSoftInputMode="adjustPan">
        </activity>
        <!--start-autoLayout configuration file-->
        <meta-data
            android:name="design_width"
            android:value="1080"/>
        <meta-data
            android:name="design_height"
            android:value="1920"/>
        <!--end-autoLayout configuration file-->

    </application>

</manifest>