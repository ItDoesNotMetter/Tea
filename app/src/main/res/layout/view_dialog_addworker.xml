<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/w_m_h_m"
              android:layout_margin="2sp"
              android:background="@color/gray"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/name"
        style="@style/dialogView_linearLayout_addWorker"
        android:background="@color/white">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/view_name"/>

        <TextView
            style="@style/w_w_h_w"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="姓  名:"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/name_textView_dialog_addWorker"
            style="@style/w_m_h_m"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/uid"
        style="@style/dialogView_linearLayout_addWorker"
        android:background="@color/white">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/view_number"/>
        <TextView
            style="@style/w_w_h_w"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="性  别:"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/sex_textView_dialog_addWorker"
            style="@style/w_w_h_w"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/uid"
        android:layout_marginLeft="48dp"
        android:background="@color/gray"/>


    <LinearLayout
        android:id="@+id/price"
        style="@style/dialogView_linearLayout_addWorker"
        android:background="@color/white">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/view_unitprice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="手机号:"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/phoneNumber_textView_dialog_addWorker"
            style="@style/w_m_h_m"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/weight"
        style="@style/dialogView_linearLayout_addWorker"
        android:background="@color/white">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/view_settledate"/>

        <TextView
            style="@style/w_w_h_w"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="身份证号:"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/idNumber_textView_dialog_addWorker"
            style="@style/w_m_h_m"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="15sp"/>

    </LinearLayout>


    <LinearLayout
        style="@style/w_m_h_w"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit_button_dialog_addWorker"
            style="@style/w_m_h_m"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_addworker"
            android:text="保存"
            android:textColor="@color/floralwhite"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/cancel_button_dialog_addWorker"
            style="@style/w_m_h_m"
            android:layout_marginLeft="5sp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_addworker"
            android:text="取消"
            android:textColor="@color/floralwhite"
            android:textSize="22sp"/>

    </LinearLayout>

</LinearLayout>