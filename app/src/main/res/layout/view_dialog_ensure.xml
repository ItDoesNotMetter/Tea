<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ensureLayout_module"
              style="@style/w_m_h_m"
              android:orientation="vertical"
>

    <LinearLayout
        android:id="@+id/title_wrapper_module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_textView_dialog_module"
            style="@style/w_m_h_w"
            android:gravity="center"
            android:padding="20dp"
            android:text="显示内容"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/barcode_imageView_module"
            style="@style/w_m_h_w"
            android:layout_below="@+id/editText"
            android:gravity="center"
            android:visibility="gone"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/select_louceng_buttons"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_wrapper_module"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/negative_button_dialog_module"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/btn_negative_shape"
            android:padding="3dp"
            android:text="取消"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/positive_button_dialog_module"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1.0"
            android:background="@drawable/btn_positive_shape"
            android:padding="3dp"
            android:text="确定"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>
